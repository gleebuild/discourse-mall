
<!doctype html><meta charset="utf-8">
<div class="mall-hero"><h2>商城</h2><p>选择商品下单体验。</p></div>
<div class="mall-grid">
  <% @products.each do |p| %>
    <div class="mall-card">
      <a href="/mall/p/<%= p.id %>">
        <div class="img" style="background-image:url('<%= p.cover_url %>')"></div>
      </a>
      <div class="body">
        <div class="title"><%= p.title %></div>
        <div class="price">¥ <%= (p.price_cents.to_i/100.0).round(2) %></div>
        <a class="btn btn-primary" href="/mall/p/<%= p.id %>">查看</a>
      </div>
    </div>
  <% end %>
</div>
